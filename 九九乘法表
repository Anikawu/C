

#include <iostream>
using namespace std;
int main()
{
	for (int i = 1; i < 10; i++)
	{
		for (int j = 2; j < 10; j += 2)
		{
			cout << j << "X" << i << "=";
			if (j * i < 10) cout << " ";
			cout << j * i << "\t";
		} cout << endl;
	} cout << endl;

	for (int i = 1; i < 10; i++)
	{
		for (int j = 3; j < 10; j += 2)
		{
			cout << j << "X" << i << "=";
			if (j * i < 10) cout << " ";
			cout << j * i << "\t";
		} cout << endl;
	} cout << endl;
}
------------------------------------------------------------------------------------


#include <iostream>
using namespace std;
int main()
{
	int z = 2;
	do
	{
		for (int i = 1; i < 10; i++)
		{
			for (int j = z; j < 10; j += 2)
			{
				cout << j << "X" << i << "=";
				if (j * i < 10) cout << " ";
				cout << j * i << "\t";
			} cout << endl;
		} cout << endl;
	} while (++z<=3);
}
